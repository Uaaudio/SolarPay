<%- include('../partials/header') %>

<div class="container my-5">
  
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="fw-bold text-dark">Faturas e Mensalidades</h2>
      <p class="text-muted mb-0">Histórico financeiro das suas unidades</p>
    </div>
    <a href="/home/seehouses/<%= user.id %>" class="btn btn-outline-secondary btn-sm">
      <i class="bi bi-arrow-left"></i> Voltar
    </a>
  </div>

  <div class="card">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead>
            <tr>
              <th class="ps-4 py-3">Apartamento</th>
              <th class="py-3">Referência</th>
              <th class="py-3">Vencimento</th>
              <th class="py-3">Status</th>
              <th class="text-end pe-4 py-3">Ação</th>
            </tr>
          </thead>
          <tbody>
            <% if (fees.length === 0) { %>
              <tr>
                <td colspan="5" class="text-center py-5 text-muted">
                  <i class="bi bi-check2-circle fs-1 d-block mb-2"></i>
                  Nenhuma fatura encontrada.
                </td>
              </tr>
            <% } %>

            <% fees.forEach(fee => { %>
              <tr>
                <td class="ps-4">
                  <div class="d-flex align-items-center">
                    <div class="bg-light rounded p-2 me-3 text-secondary">
                      <i class="bi bi-building"></i>
                    </div>
                    <strong>Unit. <%= houses.find(h => h.id === fee.houseId).number %></strong>
                  </div>
                </td>
                <td>
                  <%= fee.month %>/<%= fee.year %>
                </td>
                <td class="text-muted">
                  10/<%= fee.month %>/<%= fee.year %>
                </td>
                <td>
                  <% if(fee.payed) { %>
                    <span class="badge status-paid px-3 py-2 rounded-pill">
                      <i class="bi bi-check-circle-fill me-1"></i> Pago
                    </span>
                  <% } else { %>
                    <span class="badge status-pending px-3 py-2 rounded-pill">
                      <i class="bi bi-clock-history me-1"></i> Pendente
                    </span>
                  <% } %>
                </td>
                <td class="text-end pe-4">
                  <% if(!fee.payed) { %>
                    <a href="/payment/<%= user.id %>/<%= fee.id %>" class="btn btn-sm px-3">
                      Pagar <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                  <% } else { %>
                    <button class="btn btn-light btn-sm text-muted" disabled>
                      <i class="bi bi-file-earmark-text"></i> Recibo
                    </button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
