<%- include('../partials/header') %>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <div class="text-center mb-4">
        <h2 class="fw-bold">Minhas Dívidas</h2>
        <p class="text-muted">Aqui você vê todas as mensalidades vinculadas aos seus apartamentos.</p>
      </div>

      <!-- LOOP DAS TAXAS -->
      <% fees.forEach(fee => { %>
        <div class="card shadow-sm mb-3">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-1">
                  Apartamento: 
                  <span class="text-primary">
                    <%= houses.find(h => h.id === fee.houseId).number %>
                  </span>
                </h5>
                <p class="card-text mb-0">
                  Mês: <strong><%= fee.month %></strong> /
                  Ano: <strong><%= fee.year %></strong>
                </p>
              </div>

              <% if(fee.payed) { %>
                <span class="badge bg-success">Pago</span>
              <% } else { %>
                <span class="badge bg-danger">Pendente</span>
              <% } %>
            </div>

            <div class="mt-3 d-flex justify-content-end">
             <a href="/payment/<%= user.id %>/<%= fee.id %>" class="btn btn-outline-primary">

                Pagar
              </a>
            </div>
          </div>
        </div>
      <% }) %>
      <!-- FIM DO LOOP -->

    </div>
  </div>
</div>

<%- include('../partials/footer') %>
