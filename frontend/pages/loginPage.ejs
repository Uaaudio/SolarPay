<%- include("../partials/header") %>
<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Login</h3>
        </div>
        <div class="card-body p-4">
            <form method="POST" action="/login/dologin">
                <div class="mb-3">
                    <label for="userLogin" class="form-label">Email / Login</label>
                    <input type="text" class="form-control" id="userLogin" name="userLogin" placeholder="Insira seu Login" required>
                </div>
                <div class="mb-3">
                    <label for="userPassword" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Insira sua Senha" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>